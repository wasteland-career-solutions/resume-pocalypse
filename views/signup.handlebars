<body>
  <div class="row justify-space-between-md">
    <div class="signup-card text-center">
      <h2 class="page-title">Sign Up</h2>
      <form class="form signup-form" id="signup-form">
        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input class="form-input" type="text" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <label for="fname-signup">First Name:</label>
          <input class="form-input" type="text" id="first-name-signup" />
        </div>
        <div class="form-group">
          <label for="lname-signup">Last Name:</label>
          <input class="form-input" type="text" id="last-name-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit" id="submit-button">SIGN UP</button>
        </div>
      </form>
      <h3>Already a user?</h3>
      <button class='btn btn-primary login-button'>LOG IN</button>
    </div>
  </div>

  <script src="./js/signup.js"></script>
</body>