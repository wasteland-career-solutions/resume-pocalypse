<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">Sign up</h2>
    <form class="form signup-form" action="/api/users/signup" method="POST">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" name="email" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login"  name="password" />
      </div>
      <div class="form-group">
        <label for="fname-login">First Name:</label>
        <input class="form-input" type="text" id="fname-login"  name="firstName" />
      </div>
      <div class="form-group">
        <label for="lname-login">Last Name:</label>
        <input class="form-input" type="text" id="lname-login"  name="lastName" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign up</button>
      </div>
    </form>
  </div>
  
</div>

<script src="./js/login.js"></script>